varnishtest "Test mongodb vmod"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import std;
	import ${vmod_mongodb};

	sub vcl_init {
	}

	sub vcl_deliver {
		set resp.http.hello = "Hello, World";
		set resp.http.info = "vmod_mongodb warmed at ";
	}
} -start

client c1 {
	txreq -url "/"
	rxresp
	expect resp.http.hello == "Hello, World"
	expect resp.http.info  ~  "^vmod_mongodb warmed at "
}

client c1 -run
